<section id="flash">
  <% if flash[:errors] && !flash[:errors].empty? %>
    Sorry, there were the following problems.
    <ul id="errors">
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
        <% end %>     
    </ul>
  <% end %>

  <% if flash[:notice] %>
    <section id="notice">
      <%= flash[:notice] %>
    </section>
  <% end %>
</section>